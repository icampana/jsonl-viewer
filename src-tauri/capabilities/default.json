{
    "$schema": "../gen/schemas/desktop-schema.json",
    "identifier": "default",
    "description": "Capability for the main window",
    "windows": [
        "main"
    ],
    "permissions": [
        "core:default",
        {
            "identifier": "dialog:allow-open",
            "allow": [
                {
                    "path": "**",
                    "recursive": true
                }
            ]
        },
        "dialog:default",
        "fs:default"
    ]
}